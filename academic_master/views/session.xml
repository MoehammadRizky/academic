<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Session Tree -->
        <record id="view_academic_session_tree" model="ir.ui.view">
            <field name="name">academic.session.tree</field>
            <field name="model">academic.session</field>
            <field name="type">tree</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Session" decoration-success="taken_seats &lt; 50" decoration-warning="taken_seats &gt; 50 and taken_seats &lt; 80" decoration-danger="taken_seats &gt; 80">
                    <field name="name" />
                    <field name="instructor_id" />
                    <field name="start_date" />
                    <field name="duration" />
                    <field name="seats" />
                    <field name="taken_seats" widget="progressbar"/>
                    <field name="active" />
                </tree>
            </field>
        </record>

        <!-- Session Form -->

        <record id="view_academic_session_form" model="ir.ui.view">
            <field name="name">academic.session.form</field>
            <field name="model">academic.session</field>
            <field name="type">form</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Session">

                    <header>
                        <button string="Confirm" type="object" name="action_open" invisible="state != 'draft'" groups='academic_master.group_academic_user,base.group_system'/>
                        <button string="Mark as Done" type="object" name="action_done" invisible="state != 'open'" groups='academic_master.group_academic_manager,base.group_system'/>
                        <button string="Reset to Draft" type="object" name="action_draft" invisible="state not in ('open', 'done')" groups='academic_master.group_academic_manager,base.group_system'/>

                        <field name="state" widget="statusbar" />
                    </header>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Session Name" />
                        <h1>
                            <field name="name" readonly = "state != 'draft'"/>
                        </h1>
                    </div>
                    <group>
                        <!-- kolom kanan -->
                        <group>
                            <field name="course_id" readonly = "state != 'draft'"/>
                            <field name="instructor_id" readonly = "state != 'draft'" domain="['|',('is_instructor','=',True), ('category_id','=','instruktur')]"/>
                            <field name="start_date" readonly = "state != 'draft'" />
                            <field name="image_small" readonly = "state != 'draft'" widget="image" class="oe_avatar" />
                        </group>
                        <!-- kolom kiri -->
                        <group>
                            <field name="duration" readonly = "state != 'draft'"/>
                            <field name="seats" readonly = "state != 'draft'"/>
                            <field name="taken_seats" readonly = "state != 'draft'" widget="progressbar"/>
                            <field name="active" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Attendees">
                            <field name="attendee_ids" readonly = "state != 'draft'">
                                <tree string="Attendees">
                                    <field name="name" />
                                    <field name="session_id" />
                                    <field name="partner_id" />
                                </tree>
                            </field>
                        </page>
                    </notebook>


                </form>
            </field>
        </record>

        <!-- calendar -->
        <record id="view_academic_session_calendar" model="ir.ui.view">
            <field name="name">view_academic_session_calendar</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <calendar string="Session" date_start="start_date" color="course_id">
                    <field name="name" />
                </calendar>
            </field>
        </record>

        <record id="view_academic_session_filter" model="ir.ui.view">
            <field name="name">view_academic_session_filter</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="instructor_id"/>

                    <filter string="Non zero duration" name="non_zero" domain="[('duration', '>', 0)]"/>
                    <group string="Group by..">
                        <filter name="group_by_course" string="Course" context="{'group_by':'course_id'}" domain="[]" />
                        <filter name="group_by_instructor" string="Instructor" context="{'group_by':'instructor_id'}" domain="[]" />
                        <filter name="group_by_date" string="Date" context="{'group_by':'start_date'}" domain="[]" />
                    </group>
                </search>
            </field>
        </record>

        <!-- graph -->
        <record id="view_academic_session_graph" model="ir.ui.view">
            <field name="name">view_academic_session_graph</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <graph string="Session" type="bar">
                    <field name="instructor_id"/>
                    <!-- x axis: many2one, date -->
                    <field name="seats" operator="+"/>
                    <!-- y axis: numeric -->
                </graph>
            </field>
        </record>

        <!-- kanban -->
        <record id="view_academic_session_kanban" model="ir.ui.view">
            <field name="name">view_academic_session_kanban</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <!-- <kanban> -->
                <kanban version="7.0" default_group_by="course_id">
                    <template>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette">
                                <a type="open">
                                    <img t-att-src="kanban_image('academic.session',
                                    'image_small', record.id.value)" class="o_kanban_image"/>
                                </a>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <!-- <field name="name"/> -->
                                        <a type="open">
                                            <field name="name"/>
                                        </a>
                                    </h4>
                                    <ul>
                                        <li>Seats: <field name="seats"/>
                                        </li>
                                        <li>Taken Seats: <field name="taken_seats"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </template>
                </kanban>
            </field>
        </record>
    </data>
</odoo>